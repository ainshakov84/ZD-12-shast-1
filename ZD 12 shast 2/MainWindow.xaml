<Window x:Class="ZD_12_shast_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZD_12_shast_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="BattonTemplate">
            <Grid>
                <Ellipse Fill="gray"/>
                <ContentPresenter Content="кнопка" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <UniformGrid Rows="4">
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Content="Кнопка"/>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Content="Кнопка"/>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Content="Кнопка"/>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="76" Content="Кнопка" Template="{StaticResource BattonTemplate}"/>

    </UniformGrid>
</Window>
